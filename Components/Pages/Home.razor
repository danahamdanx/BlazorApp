@page "/"

<PageTitle>Electric Meter App</PageTitle>

<div class="text-center">
    <h1 class="display-4">Electric Meter Query System</h1>

    <p>Welcome to the Electric Meter Query and Payment System</p>

    <div class="mt-5">
        <a href="meter-query" class="btn btn-primary btn-lg">
            <i class="bi bi-speedometer2 me-2"></i>Go to Meter Query
        </a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Query Meters</h5>
                    <p class="card-text">Search and view electric meter information</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Process Payments</h5>
                    <p class="card-text">Handle customer payments and generate tokens</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View History</h5>
                    <p class="card-text">Access transaction history and reports</p>
                </div>
            </div>
        </div>
    </div>
</div>